        inserirTokenUnico(simbolo, "IDENTIFICADOR", t);
    }
    ( 
      t = <VIRGULA> { inserirTokenUnico(reservada, "VIRGULA", t); }
      t = <IDENTIFICADOR> {
          noDecl.adicionarFilho(new No("IDENTIFICADOR", t.image));
